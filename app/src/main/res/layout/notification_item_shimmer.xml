<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notifItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivProductImg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/shimmerColor"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNotifType"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/shimmerColor"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/tvDateOrder"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/cardView2" />

    <TextView
        android:id="@+id/tvNameProduct"
        android:layout_width="128dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:background="@color/shimmerColor"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvNotifType"
        app:layout_constraintTop_toBottomOf="@+id/tvNotifType" />

    <TextView
        android:id="@+id/tvPriceProduct"
        android:layout_width="78dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:background="@color/shimmerColor"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvNameProduct"
        app:layout_constraintTop_toBottomOf="@+id/tvNameProduct" />

    <TextView
        android:id="@+id/tvNotifBidPrice"
        android:layout_width="64dp"
        android:layout_height="16dp"
        android:background="@color/shimmerColor"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvPriceProduct"
        app:layout_constraintTop_toBottomOf="@+id/tvPriceProduct" />

    <TextView
        android:id="@+id/tvDateOrder"
        android:layout_width="80dp"
        android:layout_height="16dp"
        android:layout_marginEnd="42dp"
        android:background="@color/shimmerColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvNotifType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNotifType" />


</androidx.constraintlayout.widget.ConstraintLayout>