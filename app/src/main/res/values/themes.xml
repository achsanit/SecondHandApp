<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProjectBinarAcademySecondHandApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/poppins</item>
        <!-- BottomSheet Rounded -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary</item>

    </style>

    <style name="TextBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextBody.Small">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextTitle.Large">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextTitle.Medium">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextTitle.Small">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextTitle.SmallNoBold">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextTitle.VerySmall">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextTitle.VerySmallNoBold">
        <item name="android:textSize">10sp</item>
    </style>


    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="RoundedImageViewProfileDetailProduk">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="RoundedBottomImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/primary_2</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="CardViewDetail" parent="Widget.MaterialComponents.CardView">
        <item name="borderRound">30dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="fontFamily">@font/poppins_semibold</item>

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>